on early-init
    # Disable EAS
    write /proc/sys/kernel/sched_energy_aware 0

    # Boot time scheduler tuning
    write /dev/stune/schedtune.boost 50
    write /dev/stune/schedtune.prefer_idle 1

    # Boot time I/O performance tuning
    write /sys/block/mmcblk0/queue/scheduler "noop"
    write /sys/block/mmcblk0/queue/nr_requests 256
    write /sys/block/mmcblk0/queue/iostats 0

    # Boot time fs tuning
    write /sys/block/sda/queue/iostats 0
    write /sys/block/sda/queue/nr_requests 256
    write /sys/block/sda/queue/scheduler "noop"
    write /sys/block/sda/queue/iosched/group_idle 0
    write /sys/block/sda/queue/iosched/slice_idle 0

    write /sys/block/sde/queue/iostats 0
    write /sys/block/sde/queue/nr_requests 256
    write /sys/block/sde/queue/scheduler "noop"
    write /sys/block/sde/queue/iosched/group_idle 0
    write /sys/block/sde/queue/iosched/slice_idle 0

    write /sys/block/sdf/queue/iostats 0
    write /sys/block/sdf/queue/nr_requests 256
    write /sys/block/sdf/queue/scheduler "noop"
    write /sys/block/sdf/queue/iosched/group_idle 0
    write /sys/block/sdf/queue/iosched/slice_idle 0

    # Disable vblank IRQ immediately after turning off
    write /sys/module/drm/parameters/vblankoffdelay -1

on late-init
    # Start services early for bootanim
    start surfaceflinger
    start bootanim
    start vendor.hwcomposer-2-4
    start vendor.configstore-hal
    start vendor.qti.hardware.display.allocator

on boot
    # Set thermal mode to evaluation
    chown system system /sys/class/thermal/thermal_message/sconfig
    write /sys/class/thermal/thermal_message/sconfig 10

on property:vendor.post_boot.parsed=1
    # Enable EAS
    write /proc/sys/kernel/sched_energy_aware 1

    # Disable native stats collection service
    stop statsd

    # Restore default I/O performance tuning
    write /sys/block/mmcblk0/queue/scheduler "cfq"
    write /sys/block/mmcblk0/queue/nr_requests 128

    # Setup runtime cpusets
    write /dev/cpuset/top-app/cpus 0-7
    write /dev/cpuset/foreground/cpus 0-7
    write /dev/cpuset/background/cpus 4-5
    write /dev/cpuset/system-background/cpus 2-5
    write /dev/cpuset/restricted/cpus 2-5
    write /dev/cpuset/audio-app/cpus 1-2
    write /dev/cpuset/camera-daemon/cpus 1-2

    # Setup final blkio value for group_idle is us
    write /dev/blkio/blkio.group_idle 2000

    # Configure CPU frequencies
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 768000
    write /sys/devices/system/cpu/cpu6/cpufreq/scaling_min_freq 806400

    # Configure governor parameters
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/up_rate_limit_us 500
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/down_rate_limit_us 1000
    write /sys/devices/system/cpu/cpu6/cpufreq/schedutil/up_rate_limit_us 500
    write /sys/devices/system/cpu/cpu6/cpufreq/schedutil/down_rate_limit_us 1000

    # Configure CAF's hispeed boost and predicted load
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/hispeed_freq 1708800
    write /sys/devices/system/cpu/cpu6/cpufreq/schedutil/hispeed_freq 1843200
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/hispeed_load 90
    write /sys/devices/system/cpu/cpu6/cpufreq/schedutil/hispeed_load 90
    write /sys/devices/system/cpu/cpu0/cpufreq/schedutil/pl 1
    write /sys/devices/system/cpu/cpu6/cpufreq/schedutil/pl 1

    # Configure CPU input boost
    write /sys/module/cpu_boost/parameters/input_boost_freq "0:1324800 6:1324800"
    write /sys/module/cpu_boost/parameters/input_boost_ms 200
    write /sys/module/cpu_boost/parameters/powerkey_input_boost_freq "0:1804800 6:2304000"
    write /sys/module/cpu_boost/parameters/powerkey_input_boost_ms 750

    # Configure scheduler parameters
    write /proc/sys/kernel/sched_downmigrate 85
    write /proc/sys/kernel/sched_upmigrate 95
    write /proc/sys/kernel/sched_child_runs_first 1
    write /proc/sys/kernel/sched_tunable_scaling 1
    write /sys/devices/system/cpu/cpu0/core_ctl/enable 1
    write /sys/devices/system/cpu/cpu6/core_ctl/enable 1

    # Setup default schedtune values for foreground/top-app
    write /dev/stune/schedtune.boost 0
    write /dev/stune/schedtune.prefer_idle 0
    write /dev/stune/foreground/schedtune.prefer_idle 1
    write /dev/stune/top-app/schedtune.prefer_idle 1
    write /dev/stune/top-app/schedtune.boost 1

    # Report max frequency to unity tasks
    write /proc/sys/kernel/sched_lib_name "UnityMain,libunity.so,UnityGfxDeviceW,UnityMultiRende"
    write /proc/sys/kernel/sched_lib_mask_force 255

    # Runtime fs tuning
    # Skip restoring readahead as its done from init.aospa.perf.rc
    write /sys/block/sda/queue/nr_requests 128
    write /sys/block/sde/queue/nr_requests 128
    write /sys/block/sdf/queue/nr_requests 128
    write /sys/block/sda/queue/scheduler "cfq"
    write /sys/block/sde/queue/scheduler "cfq"
    write /sys/block/sdf/queue/scheduler "cfq"

    # Enable idle state listener
    write /sys/class/drm/card0/device/idle_encoder_mask 1
    write /sys/class/drm/card0/device/idle_timeout_ms 100

    # Enable PowerHAL hint processing
    setprop vendor.powerhal.init 1
